    <style name="DetailsFragmentTrailersScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/details_fragment_trailers_paddingLeft</item>
        <item name="android:paddingRight">@dimen/details_fragment_trailers_paddingRight</item>
    </style>
    <!-- item_movie_list Layout Styles -->
    <style name="ListItemCardView" parent="CardViewBase">
        <item name="android:layout_margin">@dimen/list_item_card_margin</item>
        <item name="cardCornerRadius">@dimen/list_item_card_corner_radius</item>
    </style>

    <style name="ListItemTitleLayout" parent="TextViewPrimaryBase">
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemBarLayout" parent="LinearLayoutHorizontalBase">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemGenresLayout" parent="LinearLayoutVerticalBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ListItemGenresTextSupporting" parent="TextViewSupportingBase">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/list_item_genres_text_padding</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ListItemFavouriteButton">
        <item name="android:layout_width">@dimen/list_item_favourite_button_diameter</item>
        <item name="android:layout_height">@dimen/list_item_favourite_button_diameter</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/list_item_favourite_button_padding</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_favourite_empty</item>
    </style>

    <!-- item_movie_review Layout Styles -->
    <style name="ReviewItemLayout" parent="LinearLayoutVerticalBase">
        <item name="android:paddingBottom">@dimen/review_item_layout_padding</item>
        <item name="android:paddingLeft">@dimen/review_item_layout_padding</item>
        <item name="android:paddingRight">@dimen/review_item_layout_padding</item>
    </style>

    <style name="ReviewItemTextPrimary" parent="TextViewPrimaryBase">
        <item name="android:paddingBottom">@dimen/review_item_text_primary_paddingBottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewItemTextSupporting" parent="TextViewSupportingBase">
        <item name="android:paddingBottom">@dimen/review_item_text_supporting_paddingBottom</item>
    </style>

    <style name="ReviewItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/review_item_divider_height</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- item_movie_trailer Layout Styles -->
    <style name="TrailerItemTextSupporting" parent="TextViewSupportingBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_play_trailer</item>
        <item name="android:drawablePadding">@dimen/trailer_item_text_supporting_drawablePadding
        </item>
        <item name="android:paddingRight">@dimen/trailer_item_text_supporting_paddingRight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
